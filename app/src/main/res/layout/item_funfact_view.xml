<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/card_view"

    >

    <LinearLayout
        android:id="@+id/DisplayBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@drawable/example_image_header_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="bottom"
           android:padding="20dp"
           android:background="@drawable/kotak_transparan">

           <TextView
               android:id="@+id/tv_DisplayJudul"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/nunito_extrabold"
               android:text="Ini Ceritanya Judul"
               android:textColor="@color/white" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/nunito_semibold"
               android:textColor="@color/white"
               android:text="Ini ceritanya deskripsi yang ditulis oleh penulis"
               android:id="@+id/tv_DisplayDeskripsi"
               />


       </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>