<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TambahOrEditFragment">

    <ImageButton
        android:id="@+id/ib_UploadImage"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:contentDescription="uploadImage"
        android:src="@drawable/upload_foto_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Jelajahi" />


    <EditText
        android:id="@+id/et_AddTanggalUpload"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_background"
        android:ems="10"
        android:fontFamily="@font/nunito_medium"
        android:hint="Tanggal"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/et_AddPenulis"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/tv_Tanggal"
        app:layout_constraintTop_toBottomOf="@+id/tv_Tanggal" />

    <EditText
        android:id="@+id/et_AddPenulis"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_background"
        android:ems="10"
        android:fontFamily="@font/nunito_medium"
        android:hint="Penulis"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/et_AddTitle"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/tv_Penulis"
        app:layout_constraintTop_toBottomOf="@+id/tv_Penulis" />

    <EditText
        android:id="@+id/et_AddDeskripsi"
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_background"
        android:ems="10"
        android:fontFamily="@font/nunito_medium"
        android:hint="Deskripsi"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/et_AddTanggalUpload"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/tv_Deskripsi"
        app:layout_constraintTop_toBottomOf="@+id/tv_Deskripsi" />

    <EditText
        android:id="@+id/et_AddTitle"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_background"
        android:ems="10"
        android:fontFamily="@font/nunito_medium"
        android:hint="Judul"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ib_UploadImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_Judul"
        app:layout_constraintTop_toBottomOf="@+id/tv_Judul" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Simpan"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/save_button"
        android:contentDescription="Simpan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_AddDeskripsi" />

    <TextView
        android:id="@+id/tv_Jelajahi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_black"
        android:text="Jelajahi"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_medium"
        android:text="Judul"
        app:layout_constraintStart_toStartOf="@+id/ib_UploadImage"
        app:layout_constraintTop_toBottomOf="@+id/ib_UploadImage" />

    <TextView
        android:id="@+id/tv_Penulis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_medium"
        android:text="Penulis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_AddTitle"
        app:layout_constraintTop_toBottomOf="@+id/et_AddTitle" />

    <TextView
        android:id="@+id/tv_Tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_medium"
        android:text="Tanggal Upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_AddPenulis"
        app:layout_constraintTop_toBottomOf="@+id/et_AddPenulis" />

    <TextView
        android:id="@+id/tv_Deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_medium"
        android:text="Deskripsi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_AddTanggalUpload"
        app:layout_constraintTop_toBottomOf="@+id/et_AddTanggalUpload" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="22dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toEndOf="@+id/tv_Jelajahi"
        app:layout_constraintTop_toTopOf="@+id/tv_Jelajahi" />

    <ImageView
        android:id="@+id/iv_Avatar"
        android:layout_width="258dp"
        android:layout_height="112dp"
        android:src="@drawable/bg_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/ib_UploadImage"
        app:layout_constraintEnd_toEndOf="@+id/ib_UploadImage"
        app:layout_constraintStart_toStartOf="@+id/ib_UploadImage"
        app:layout_constraintTop_toTopOf="@+id/ib_UploadImage" />
</androidx.constraintlayout.widget.ConstraintLayout>